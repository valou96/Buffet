{% extends 'base.html.twig' %}

{% block title %}TypePiece index{% endblock %}

{% block body %}
    <h1>TypePiece index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type_piece in type_pieces %}
            <tr>
                <td>{{ type_piece.id }}</td>
                <td>{{ type_piece.libelle }}</td>
                <td>
                    <a href="{{ path('app_type_piece_show', {'id': type_piece.id}) }}">show</a>
                    <a href="{{ path('app_type_piece_edit', {'id': type_piece.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_type_piece_new') }}">Create new</a>
{% endblock %}
