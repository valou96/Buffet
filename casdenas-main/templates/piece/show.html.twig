{% extends 'base.html.twig' %}

{% block title %}Piece{% endblock %}

{% block body %}
    <h1>Piece</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ piece.id }}</td>
            </tr>
            <tr>
                <th>NumSerie</th>
                <td>{{ piece.numSerie }}</td>
            </tr>
            <tr>
                <th>DateFabrication</th>
                <td>{{ piece.dateFabrication ? piece.dateFabrication|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ piece.prix }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ piece.etat }}</td>
            </tr>
            <tr>
                <th>SiteStockage</th>
                <td>{{ piece.siteStockage }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_piece_index') }}">back to list</a>

    <a href="{{ path('app_piece_edit', {'id': piece.id}) }}">edit</a>

    {{ include('piece/_delete_form.html.twig') }}
{% endblock %}
