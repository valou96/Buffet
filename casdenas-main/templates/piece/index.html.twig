{% extends 'base.html.twig' %}

{% block title %}Piece index{% endblock %}

{% block body %}
    <h1>Piece index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NumSerie</th>
                <th>DateFabrication</th>
                <th>Prix</th>
                <th>Etat</th>
                <th>SiteStockage</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for piece in pieces %}
            <tr>
                <td>{{ piece.id }}</td>
                <td>{{ piece.numSerie }}</td>
                <td>{{ piece.dateFabrication ? piece.dateFabrication|date('Y-m-d') : '' }}</td>
                <td>{{ piece.prix }}</td>
                <td>{{ piece.etat }}</td>
                <td>{{ piece.siteStockage }}</td>
                <td>
                    <a href="{{ path('app_piece_show', {'id': piece.id}) }}">show</a>
                    <a href="{{ path('app_piece_edit', {'id': piece.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_piece_new') }}">Create new</a>
{% endblock %}
